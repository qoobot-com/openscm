<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qoobot.openscm.supplier.mapper.SupplierMapper">

    <select id="selectSupplierPage" resultType="com.qoobot.openscm.supplier.entity.Supplier">
        SELECT *
        FROM supplier
        WHERE del_flag = 0
        <if test="supplierName != null and supplierName != ''">
            AND supplier_name LIKE CONCAT('%', #{supplierName}, '%')
        </if>
        <if test="supplierType != null">
            AND supplier_type = #{supplierType}
        </if>
        <if test="supplierStatus != null">
            AND status = #{supplierStatus}
        </if>
        ORDER BY create_time DESC
    </select>

</mapper>
